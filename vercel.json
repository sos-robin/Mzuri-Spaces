{
    "builds": [
        {
            "src": "mzuri_spaces/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb", 
                "runtime": "python3.9"
            }
        },
        {
            "src": "static/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"  // Adjusted to match STATIC_ROOT
        },
        {
            "src": "/img/(.*)",
            "dest": "/img/$1"  // Changed from /img/ to /media/ for consistency with MEDIA_URL
        },
        {
            "src": "/(.*)",
            "dest": "mzuri_spaces/wsgi.py"
        }
    ]
}
